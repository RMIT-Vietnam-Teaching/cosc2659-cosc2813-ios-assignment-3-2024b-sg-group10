const express = require('express');
const router = express.Router();
const { getReports, changeUserRole } = require('../controllers/adminController');
const authenticate = require('../middleware/authMiddleware');
const { verifyAdmin } = require('../middleware/auth');
const { getStatistics } = require('../controllers/statisticsController');

router.get('/reports', authenticate, getReports);
router.patch('/users/:id', authenticate, changeUserRole);
router.get('/statistics', verifyAdmin, getStatistics);

module.exports = router;
